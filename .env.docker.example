# ==============================================================================
# DOCKER ENVIRONMENT CONFIGURATION
# ==============================================================================
# Environment variables for Docker deployment
# Uses Docker service names instead of localhost
# ==============================================================================

# Node Environment
NODE_ENV=production

# ==============================================================================
# DATABASE CONFIGURATION (Docker)
# ==============================================================================
POSTGRES_DB=sms_platform
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_PORT=5432
# Use service name 'postgres' instead of localhost in Docker
DATABASE_URL="postgresql://admin:admin@postgres:5432/sms_platform?schema=public"

# ==============================================================================
# REDIS CONFIGURATION (Docker)
# ==============================================================================
# Use service name 'redis' instead of localhost in Docker
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ==============================================================================
# API/BACKEND CONFIGURATION (Docker)
# ==============================================================================
API_PORT=8000
PORT=8000
JWT_SECRET=your-secret-key-change-in-production
# Use service name 'web' instead of localhost in Docker
CLIENT_URL=http://web:3000
# Use service name 'api' instead of localhost in Docker
BACKEND_URL=http://api:8000
FRONTEND_URL=http://web:3000

# File Upload Configuration
UPLOADS_DIR=/app/uploads

# ==============================================================================
# WEB/FRONTEND CONFIGURATION (Docker)
# ==============================================================================
WEB_PORT=3000
# IMPORTANT: NEXT_PUBLIC_* variables run in the BROWSER (client-side)
# So they must use localhost (from user's machine), NOT Docker service names!
# For server-side API calls inside Docker, use http://api:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# ==============================================================================
# EMAIL CONFIGURATION
# ==============================================================================
# Choose your email provider: "gmail", "sendgrid", "mailgun", or "smtp"
EMAIL_PROVIDER=sendgrid

# Gmail Configuration (if using Gmail)
GMAIL_USER=your_gmail_user@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_16_chars

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Mailgun Configuration (if using Mailgun)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# Generic SMTP Configuration (if using custom SMTP)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587

# ==============================================================================
# IMAGEKIT CONFIGURATION (Image Uploads)
# ==============================================================================
IMAGEKIT_PUBLIC_KEY=public_your_imagekit_public_key_here
IMAGEKIT_PRIVATE_KEY=private_your_imagekit_private_key_here
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id_here
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=public_your_imagekit_public_key_here
NEXT_PUBLIC_IMAGEKIT_URL=https://ik.imagekit.io/your_id_here

# ==============================================================================
# PAYMENT GATEWAY (eSewa)
# ==============================================================================
ESEWA_SECRET_KEY=your_esewa_secret_key_here
ESEWA_PRODUCT_CODE=EPAYTEST
